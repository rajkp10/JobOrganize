{
  "name": "joborganize",
  "version": "1.0.0",
  "description": "PC application to manage job applications",
  "main": "main.js",
  "scripts": {
    "start": "electronmon .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder --mac",
    "build-css": "sass sass/main.scss styles/main.css",
    "watch-css": "sass --watch sass:styles"
  },
  "author": "Raj Patel (rajkp10)",
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "sass": "^1.83.0"
  },
  "build": {
    "appId": "com.mycompany.my-electron-app",
    "productName": "JobOrganize",
    "files": [
      "styles/**/*",
      "preload/*",
      "renderer/*",
      "views/*",
      "utils/*",
      "main.js"
    ],
    "directories": {
      "output": "build"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "artifactName": "${productName}-${version}-setup.${ext}"
  },
  "type": "module",
  "dependencies": {
    "electron-store": "^10.0.0",
    "electronmon": "^2.0.3"
  }
}
